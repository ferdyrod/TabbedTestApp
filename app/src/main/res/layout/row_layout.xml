<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_padding">

        <ImageView
            android:id="@+id/appImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Nombre de App"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/appImage"
            android:layout_toEndOf="@+id/appImage" />

        <TextView
            android:id="@+id/appDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="LenusApps"
            android:layout_below="@+id/appName"
            android:layout_toLeftOf="@+id/appPrice"
            android:layout_toRightOf="@+id/appImage"
            android:layout_toEndOf="@+id/appImage" />

        <TextView
            android:id="@+id/appPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/appDeveloper"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            tools:text="â‚¬ 30.00" />


    </RelativeLayout>

</android.support.v7.widget.CardView>